# ============================================
# Sustainable Construction Backend
# Environment Configuration Template
# ============================================
# 
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# Command: copy env.template .env (Windows) or cp env.template .env (Mac/Linux)
#

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/sustainable-construction

# MongoDB Atlas (Cloud) - Uncomment and use for production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sustainable-construction

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Leave empty if you don't have Firebase yet (optional for MVP)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# ============================================
# GOOGLE GEMINI API
# ============================================
# Get from: https://makersuite.google.com/app/apikey
# Used for: Material estimation, cost prediction, sustainability analysis,
#           budget optimization, OCR text extraction, task generation
GEMINI_API_KEY=

# ============================================
# TESSERACT OCR (OPTIONAL FREE FALLBACK)
# ============================================
# Install: npm install tesseract.js
# 100% FREE open-source OCR - no API keys needed!
# Used as fallback when Gemini Vision fails or quota exceeded
# Automatically enabled if tesseract.js package is installed
# Supports 100+ languages (default: English)
# No configuration required - it just works!

# ============================================
# OPENWEATHER API
# ============================================
# Get from: https://openweathermap.org/api (free tier available)
OPENWEATHER_API_KEY=
DEFAULT_LOCATION=Colombo,LK

# ============================================
# N8N CONFIGURATION (DEPRECATED - October 11, 2025)
# ============================================
# Replaced with unified Gemini AI backend
# Kept for reference only - do not use
# N8N_WEBHOOK_URL=https://n8n.icy-r.dev/webhook/31a220c7-a676-4434-9f5e-608d25d48ca7

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760

# ============================================
# DIGITALOCEAN SPACES CONFIGURATION
# ============================================
# Get from: DigitalOcean Dashboard → Spaces → API Keys
# Used for: Persistent file storage (survives deployments)
SPACES_KEY=your_spaces_access_key
SPACES_SECRET=your_spaces_secret_key
SPACES_BUCKET=uee
SPACES_REGION=sfo3
SPACES_ENDPOINT=sfo3.digitaloceanspaces.com

# CDN Configuration (recommended for better performance)
SPACES_CDN_ENABLED=true
SPACES_CDN_ENDPOINT=https://uee.sfo3.cdn.digitaloceanspaces.com

